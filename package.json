{
  "name": "react-guardian",
  "version": "1.0.0",
  "description": "Protect your routes and components in react applications",
  "author": "Mohammad Ataei",
  "license": "MIT",
  "keywords": [
    "react",
    "middleware",
    "guard",
    "react-guard",
    "react-middleware"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mammadataei/react-guardian/"
  },
  "bugs": {
    "url": "https://github.com/mammadataei/react-guardian/issues"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "test": "vitest --ui --open=false",
    "coverage": "vitest run --coverage",
    "size": "size-limit",
    "format": "prettier --write . && pnpm lint --fix",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0",
    "react-router-dom": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "react-router-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@size-limit/preset-small-lib": "^8.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "@vitejs/plugin-react": "^2.0.1",
    "@vitest/ui": "^0.22.1",
    "c8": "^7.12.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "size-limit": "^8.0.1",
    "typescript": "^4.7.4",
    "unbuild": "^0.8.9",
    "vite": "^3.0.9",
    "vitest": "^0.22.1"
  },
  "size-limit": [
    {
      "limit": "1 kB",
      "path": "dist/index.mjs"
    }
  ]
}
